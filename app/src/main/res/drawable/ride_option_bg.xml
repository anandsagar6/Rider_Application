<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lavender" /> <!-- Selected Color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Normal Color -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#8E8989" />
        </shape>
    </item>
</selector>

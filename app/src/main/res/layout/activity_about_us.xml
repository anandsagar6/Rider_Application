<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutUsActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_btn"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Headline -->


            <TextView
                android:id="@+id/aboutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:lineSpacingExtra="4dp"
                android:text="Welcome to Rideer!\n\nRideer is a modern ride-booking app designed to make your daily commute fast, safe, and convenient. Our mission is to connect riders and drivers seamlessly, providing a reliable transportation experience for everyone.\n\nKey Features:\n- Quick and easy ride booking\n- Multiple vehicle options: Moto, Sedan, Premium, Auto, Ambulance\n- Real-time tracking of your ride\n- Secure and cashless payments\n- Personalized user experience\n\nPayment Information:\n- Rideer does not currently process payments directly.\n- In the future, secure third-party payment systems may be integrated for safe transactions.\n\n⚠ Demo Mode Disclaimer:\n- Rideer is currently in demo mode. While users can book rides and drivers may see ride requests, there are no real drivers in the physical world at this time. This is for testing purposes only.\n\nThank you for choosing Rideer! We hope you enjoy your ride experience.\nFor any feedback or inquiries, contact us at: anandsagar0006@gmail.com"
                />



            <!-- Made with ❤️ -->
            <TextView
                android:id="@+id/madeWithLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with ❤️ "
                android:textSize="14sp"
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

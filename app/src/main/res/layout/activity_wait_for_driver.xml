<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">




    <!-- OSM MapView -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!-- Bottom Info Card -->
    <LinearLayout
        android:id="@+id/bottom_sheet_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:padding="20dp"
    android:elevation="12dp"
    android:clipToPadding="false">

    <!-- Timer -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto cancel in: 60s"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/pinText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PIN: ----"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:visibility="gone"/>


        <!-- Ride Status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking for drivers..."
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Pickup & Destination -->
    <TextView
        android:id="@+id/pickupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup: ..."
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/destText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination: ..."
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:paddingBottom="8dp" />

    <!-- Driver Info -->
    <TextView
        android:id="@+id/driverInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for driver..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <!-- Distance from driver -->
    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver distance: ..."
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelRideBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Ride"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp" />
</LinearLayout>

    </RelativeLayout>

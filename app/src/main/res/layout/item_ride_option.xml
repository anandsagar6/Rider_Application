<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/ride_option_bg"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Ride Icon -->
    <ImageView
        android:id="@+id/ride_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/moto"/>

    <!-- Ride Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/ride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Name"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ride_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 members"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Ride Price -->
    <TextView
        android:id="@+id/ride_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹0.00"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>

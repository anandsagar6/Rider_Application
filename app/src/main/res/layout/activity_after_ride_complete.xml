<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ Ride Completed!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Card for Ride Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_1"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRideId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride ID: 12345"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver: John Doe"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: Sedan (MP09AB1234)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:scrollHorizontally="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Pickup Location"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop: Mumbai"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare: â‚¹200"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_marginTop="12dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="20dp"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="center"
                android:progressTint="#FFE500"
                android:progressBackgroundTint="#CCCCCC"
                android:secondaryProgressTint="#FFD700"
                android:isIndicator="false"
                android:scaleX="1.3"
                android:scaleY="1.3" />

            <Button
                android:id="@+id/btnSubmitRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Rating"
                android:backgroundTint="@color/black"
                android:layout_marginTop="20dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleLarge"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
